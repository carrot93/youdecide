$headerHeight = 50px
$primaryColor = #778899

//

body
	font 14px/1.6em 'Lucida Grande', 'Lucida Sans Unicode', 'STHeitiSC', 'Helvetica', 'Arial', 'Verdana', 'sans-serif'
	color #333

h1
h2
h3
h4
h5
h6
	margin-bottom 8px
	color $primaryColor

a
	text-decoration none

input[type='text']
input[type='password']
input[type='submit']
	padding 8px
	border 1px solid #efefef

input[type='submit']
	background-color $primaryColor
	color white

.ui-container
	margin 0 auto
	width 1000px

.ui-header
	height $headerHeight
	background-color $primaryColor
	color white
	& a
		color white

.ui-aside
	margin-left 32px
	padding 64px 0
	width 300px

.ui-text-mute
	color #999

.ui-image-circle
	border-radius 50%
