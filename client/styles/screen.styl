$containerWidth = 960px
$headerHeight = 50px
$primaryColor = #778899

//

body
	font 14px/1.6em 'Lucida Grande', 'Lucida Sans Unicode', 'STHeitiSC', 'Helvetica', 'Arial', 'Verdana', 'sans-serif'
	background-color $primaryColor + 50%
	color #666

h1
h2
h3
h4
h5
h6
	// margin-bottom 8px
	color $primaryColor

a
	text-decoration none
	color $primaryColor

input[type='text']
input[type='password']
input[type='submit']
textarea
	padding 8px
	background-color transparent
	border 1px solid #efefef

input[type='submit']
	background-color $primaryColor
	color white

textarea
	width 100%
	resize none

i
	color $primaryColor

#castfx
	position fixed
	z-index -1
	top 0
	right 0
	bottom 0
	left 0

.ui-layout-default
	padding 80px 0

.ui-container
	margin 0 auto
	width $containerWidth

.ui-header
	padding 0
	height $headerHeight
	background-color $primaryColor
	color white
	& a
		padding 0 16px
		color white
		&.active
			background-color $primaryColor - 50%

.ui-aside
	margin-left 30px
	width 300px

.ui-text-mute
	color #999

.ui-image-circle
	border-radius 50%

.ui-module
	background-color white

.ui-bordered-bottom
	border-bottom 1px solid #efefef

.ui-image-avatar
	width 48px
	height 48px

progress
	width 100%
	border 0
	border-radius 0

progress::-webkit-progress-bar
	background #0000ff

progress::-webkit-progress-value
	background #ff0000
